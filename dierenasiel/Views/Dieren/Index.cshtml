@{
    ViewBag.Title = "Aanwezige dieren";
}
<h1>Aanwezige dieren</h1>
<p>
    Wij bieden onderdak aan de volgende dieren:
</p>
<ul>
    <li>
        <a href="#animal-honden">Honden</a>
    </li>
    <li>
        <a href="#animal-katten">Katten</a>
    </li>
</ul>
<section id="animal-honden" class="animal-section">
    <h2>Honden</h2>
    <p>
        Dit zijn onze honden.
    </p>
    <input type="button" id="delete-dogs" value="Verwijder honden">
    <table class="animal-list">
        <thead>
        <tr>
            <th>Naam</th>
            <th>Leeftijd</th>
            <th>Reg. Nr.</th>
            <th>Gereserveerd</th>
        </tr>
        </thead>
        <tbody id="animal-honden-data">
        </tbody>
    </table>
</section>
<section id="animal-katten" class="animal-section">
    <h2>Katten</h2>
    <p>
        Dit zijn onze katten.
    </p>
    <input type="button" id="delete-cats" value="Verwijder katten">
    <table class="animal-list">
        <thead>
        <tr>
            <th>Naam</th>
            <th>Leeftijd</th>
            <th>Reg. Nr.</th>
            <th>Gereserveerd</th>
        </tr>
        </thead>
        <tbody id="animal-katten-data">
        </tbody>
    </table>
</section>
<h2>Dier toevoegen</h2>
<form id="add-form">
    <label for="add-name">Naam</label>
    <input type="text" id="add-name">
    <p class="hidden" id="add-name-hint">
        Verplicht
    </p>
    <br>

    <label for="add-age">Leeftijd</label>
    <input type="number" id="add-age">
    <br>

    <label for="add-id">Reg. Nr.</label>
    <input type="number" id="add-id">
    <p class="hidden" id="add-id-hint">
        Het registratienummer is niet verplicht, maar moet als deze ingevuld is met een 0 beginnen.
    </p>
    <br>

    <label for="add-reserved">Gereserveerd</label>
    <input type="checkbox" id="add-reserved">
    <br>

    <label for="add-type-dog">Hond</label>
    <input type="radio" id="add-type-dog" name="add-type" value="dog">
    <br>
    <label for="add-type-cat">Kat</label>
    <input type="radio" id="add-type-cat" name="add-type" value="cat">
    <br>

    <input type="submit" id="add-submit" value="Toevoegen">
</form>