@using Models
@model Dog
@{
    ViewBag.Title = "Hond toevoegen";
}
<h2>Dier toevoegen</h2>
@using (Html.BeginForm("CreateDog", "Animals"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(dog => dog.Id)

    @Html.LabelFor(dog => dog.Name)
    @Html.EditorFor(dog => dog.Name)
    @Html.ValidationMessageFor(dog => dog.Name)
    <br>

    @Html.LabelFor(dog => dog.Gender)
    @Html.DropDownListFor(dog => dog.Gender, (IEnumerable<SelectListItem>) ViewBag.GenderOptions)
    @Html.ValidationMessageFor(dog => dog.Gender, "Man of vrouw")
    <br>

    @Html.LabelFor(dog => dog.LastWalk)
    @Html.EditorFor(dog => dog.LastWalk)
    @Html.ValidationMessageFor(dog => dog.LastWalk)
    <br>

    <input type="submit" value="Voeg toe"/>
}